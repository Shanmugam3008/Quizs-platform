<!-- views/user/dashboard.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard - Quiz Platform</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header') %>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8">
                <h2>Welcome, <%= user.username %>!</h2>
                <div class="card">
                    <div class="card-header">
                        <h4>Available Quizzes</h4>
                    </div>
                    <div class="card-body">
                        <% if (quizzes.length > 0) { %>
                            <div class="list-group">
                                <% quizzes.forEach(quiz => { %>
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <h5><%= quiz.title %></h5>
                                            <p class="mb-1"><%= quiz.description %></p>
                                        </div>
                                        <a href="/user/take-quiz/<%= quiz.id %>" class="btn btn-primary">Take Quiz</a>
                                    </div>
                                <% }); %>
                            </div>
                        <% } else { %>
                            <p>No quizzes available at the moment.</p>
                        <% } %>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h4>Your Quiz Results</h4>
                    </div>
                    <div class="card-body">
                        <% if (results.length > 0) { %>
                            <% results.forEach(result => { %>
                                <div class="mb-3 p-2 border rounded">
                                    <h6><%= result.title %></h6>
                                    <p class="mb-0">Score: <%= result.score %>/<%= result.total_questions %></p>
                                    <small class="text-muted">
                                        <%= new Date(result.created_at).toLocaleDateString() %>
                                    </small>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <p>You haven't taken any quizzes yet.</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>
   
    <script src="/js/script.js"></script>
</body>
</html>