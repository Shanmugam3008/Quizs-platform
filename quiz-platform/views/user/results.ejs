<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quiz Results - Quiz Platform</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .results-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 20px;
        }
        .results-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 40px;
            border-radius: 15px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }
        .result-card {
            background: white;
            border-radius: 12px;
            padding: 25px;
            margin-bottom: 20px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            border: 1px solid rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
        }
        .result-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }
        .score-circle {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 1.2rem;
            margin: 0 auto;
        }
        .progress {
            height: 8px;
            border-radius: 10px;
        }
        .no-results {
            text-align: center;
            padding: 60px 40px;
            color: #6c757d;
        }
        .stats-card {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
            border-radius: 12px;
            padding: 25px;
            margin-bottom: 25px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/user/dashboard">
                <i class="fas fa-brain me-2"></i>Quiz Platform
            </a>
            <ul class="navbar-nav me-auto">
                <% if (user && user.role === 'user') { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/user/dashboard">Dashboard</a>
                    </li>
                <% } %>
            </ul>
            <div class="navbar-nav ms-auto">
                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" 
                       data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-user me-1"></i>Hello !<%= user.username %>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="/user/dashboard">
                            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                        </a></li>
                        <li><a class="dropdown-item" href="/user/profile">
                            <i class="fas fa-user me-2"></i>Profile
                        </a></li>
                        <li><a class="dropdown-item" href="/user/results">
                            <i class="fas fa-chart-bar me-2"></i>Results
                        </a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/logout">
                            <i class="fas fa-sign-out-alt me-2"></i>Logout
                        </a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="results-container">
        <!-- Results Header -->
        <div class="results-header text-center">
            <h1><i class="fas fa-chart-bar me-2"></i>Your Quiz Results</h1>
            <p class="lead mb-0">Detailed history of all your quiz attempts</p>
        </div>

        <!-- Statistics -->
        <div class="stats-card">
            <div class="row text-center">
                <div class="col-md-3">
                    <h3><%= results.length %></h3>
                    <p class="mb-0">Total Attempts</p>
                </div>
                <div class="col-md-3">
                    <h3>
                        <% 
                            let totalScore = 0;
                            let totalQuestions = 0;
                            results.forEach(result => {
                                totalScore += result.score;
                                totalQuestions += result.total_questions;
                            });
                            const avgScore = results.length > 0 ? ((totalScore / totalQuestions) * 100).toFixed(1) : 0;
                        %>
                        <%= avgScore %>%
                    </h3>
                    <p class="mb-0">Average Score</p>
                </div>
                <div class="col-md-3">
                    <h3>
                        <%
                            const passedQuizzes = results.filter(result => {
                                return (result.score / result.total_questions) >= 0.6;
                            }).length;
                        %>
                        <%= passedQuizzes %>
                    </h3>
                    <p class="mb-0">Quizzes Passed</p>
                </div>
                <div class="col-md-3">
                    <h3>
                        <%
                            let bestScore = 0;
                            results.forEach(result => {
                                const percentage = (result.score / result.total_questions) * 100;
                                if (percentage > bestScore) bestScore = percentage;
                            });
                        %>
                        <%= bestScore.toFixed(1) %>%
                    </h3>
                    <p class="mb-0">Best Score</p>
                </div>
            </div>
        </div>

        <!-- Results List -->
        <% if (results.length > 0) { %>
            <div class="row">
                <% results.forEach(result => { %>
                    <div class="col-lg-6 mb-4">
                        <div class="result-card">
                            <div class="row align-items-center">
                                <div class="col-md-3 text-center">
                                    <%
                                        const percentage = ((result.score / result.total_questions) * 100).toFixed(1);
                                        let circleClass = 'bg-success';
                                        if (percentage < 60) circleClass = 'bg-danger';
                                        else if (percentage < 80) circleClass = 'bg-warning';
                                    %>
                                    <div class="score-circle <%= circleClass %> text-white">
                                        <%= percentage %>%
                                    </div>
                                </div>
                                <div class="col-md-9">
                                    <h5 class="mb-2"><%= result.title %></h5>
                                    <p class="text-muted mb-2 small"><%= result.description || 'Quiz attempt' %></p>
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="badge bg-primary">
                                            Score: <%= result.score %>/<%= result.total_questions %>
                                        </span>
                                        <small class="text-muted">
                                            <i class="fas fa-calendar me-1"></i>
                                            <%= new Date(result.created_at).toLocaleDateString() %>
                                        </small>
                                    </div>
                                    <div class="progress mb-2">
                                        <div class="progress-bar <%= circleClass %>" 
                                             style="width: <%= percentage %>%">
                                        </div>
                                    </div>
                                    <div class="text-end">
                                        <a href="/user/take-quiz/<%= result.quiz_id %>" 
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-redo me-1"></i>Retake Quiz
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="no-results">
                <i class="fas fa-chart-bar fa-4x mb-3"></i>
                <h3>No Results Yet</h3>
                <p class="mb-4">You haven't taken any quizzes yet. Start your learning journey now!</p>
                <a href="/user/dashboard" class="btn btn-primary btn-lg">
                    <i class="fas fa-play me-2"></i>Take Your First Quiz
                </a>
            </div>
        <% } %>
    </div>

    <footer class="bg-dark text-white text-center py-3 mt-5">
        <div class="container">
            <p class="mb-0">&copy; 2025 Quiz Platform. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
     <%- include('../partials/footer') %>
</body>
</html>